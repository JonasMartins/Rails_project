<p>
	<!-- Object from controller -->
	<h1><%= @recipe.name %></h1>
</p>
	<div class="row">
		<div class="col-md-4 pull-right center">
			<%= gravatar_for @recipe.chef, size: 200 %>
			<p>
				<h5>Brought to You By: <%= @recipe.chef.chefname %></h5>
			</p>			
		</div>
		<div class="col-md-8">
			<h3><%= @recipe.summary %></h3>
			<div class="well">
				<p>
					<strong>Steps:</strong>
				</p>
				<!-- Para deixar o texto da mesma forma
				com foi digitado, com os enters e tudo mais -->
				<%= simple_format(@recipe.description) %>
			</div>
		</div>
		<section class="col-md-8">
			<div class="btn-toolbar" role="toolbar"
			aria-label="...">
  		<div class="btn-group" role="group" 
  		aria-label="...">  
      <%= link_to 'Return to all recipes', recipe_index_path , class: "btn btn-default btn-space" %>
      <%= link_to 'Edit this Recipe', edit_recipe_path(@recipe) , class: "btn btn-default btn-space" %>
		  </div>
		</div>
		</section>
			
	</div>

 