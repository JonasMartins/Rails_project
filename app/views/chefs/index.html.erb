<%= render 'shared/page_title', title: "All Chefs" %>

<div class="row">
	<div class="col-md-4 col-md-offset-4 center">
		<%= will_paginate @chefs %>
	</div>
</div>
<!-- List all the chefs -->
<% @chefs.each do |chef| %>
	<div class="row">
		<div class="col col-md-4 col-md-offset-4 center">
				
			<!-- Aqui de novo vai ser substituido pela imagem 
			de perfil -->		
			<%=  link_to gravatar_for(chef, size: 200), chef_path(chef) %>
			<p>
				<h4><%= chef.chefname %></h4>
			</p>
		</div>
	</div>
<% end %>	
<div class="row">
	<div class="col-md-4 col-md-offset-4 center">
		<%= will_paginate @chefs %>
	</div>
</div>