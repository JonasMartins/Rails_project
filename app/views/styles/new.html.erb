<%= render 'shared/page_title', title: "Create a new Style" %>

<%= render 'shared/errors', obj: @style %>

<div class="row">
	<div class="well col-md-4 col-md-offset-4">
		<!-- Atenção na form -->
		<%= form_for @style , url: {action: "create"} do |f| %>
			<%= f.label :name %>
			<%= f.text_field :name %>
			
			<%= f.submit 'Create Style', class: "btn btn-success" %>
		<% end %>
	</div>
</div>

