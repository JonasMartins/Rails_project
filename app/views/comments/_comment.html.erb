<li>
	<div class="well">
		<small><i>Chef <%= link_to comment.chef.chefname, chef_path(comment.chef), :target => "_blank" %>
			Said at: <%= time_ago_in_words(comment.created_at) %> ago:
		</i></small>
		<p><%= comment.body %></p>
			<small class="pull-right"><%= comment.id %></small>
	</div>
	
	<% if logged_in? %>
		<%= form_for [comment, Comment.new] do |f| %>
      <%= f.text_area :body, placeholder: "Add a Reply", :id => "auto-enter" %>
  	<% end %>
	<% end %>
	<ul class="list-unstyled">
	    <%= render partial: 'comments/comment', collection: comment.comments %>
	</ul>


</li>
<!-- enter para submeter a reposta -->
<script type="text/javascript">
	$(function() {
		$('#auto-enter').keypress(function(e){
			 if( e.which && e.which == 13 (e.keyCode && e.keyCode == 13) ){
		      $('button[type=submit] .default').click();
            	return false;
       		 	} else {
          	  return true;
		     	 	}
		  	});
		});
	

</script>

